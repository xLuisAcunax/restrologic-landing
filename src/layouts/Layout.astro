---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';
import { languages } from '../i18n/ui';
import LanguagePicker from '../components/LanguagePicker.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<!doctype html>
<html lang={lang} data-theme="cupcake">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="RestroLogic SaaS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="navbar bg-base-100 shadow-sm sticky top-0 z-50">
            <div class="navbar-start">
              <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                  <li><a href={translatePath('/')}>{t('nav.home')}</a></li>
                  <li><a href={translatePath('/#features')}>{t('nav.features')}</a></li>
                  <li><a href={translatePath('/#modules')}>{t('nav.modules')}</a></li>
                  <li><a href={translatePath('/#pricing')}>{t('nav.pricing')}</a></li>
                  <li><a href={translatePath('/#contact')}>{t('nav.contact')}</a></li>
                  <li class="menu-title">Language</li>
                  {Object.entries(languages).map(([langPrefix, label]) => (
                    <li>
                      <a href={translatePath('/', langPrefix)} class={lang === langPrefix ? 'active' : ''}>
                        {label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
              <a href={translatePath('/')} class="btn btn-ghost text-xl font-bold text-primary">RestroLogic</a>
            </div>
            <div class="navbar-center hidden lg:flex">
              <ul class="menu menu-horizontal px-1">
                <li><a href={translatePath('/')}>{t('nav.home')}</a></li>
                <li><a href={translatePath('/#features')}>{t('nav.features')}</a></li>
                <li><a href={translatePath('/#modules')}>{t('nav.modules')}</a></li>
                <li><a href={translatePath('/#pricing')}>{t('nav.pricing')}</a></li>
                <li><a href={translatePath('/#contact')}>{t('nav.contact')}</a></li>
              </ul>
            </div>
            <div class="navbar-end">
              <div class="hidden lg:block">
                <LanguagePicker />
              </div>
              <a href="#contact" class="btn btn-primary ml-2">{t('hero.cta')}</a>
            </div>
          </div>
		<slot />
        <footer class="footer p-10 bg-neutral text-neutral-content">
            <aside>
              <svg width="50" height="50" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" class="fill-current"><path d="M22.672 15.226l-2.432.811.841 2.515c.33 1.019-.209 2.127-1.23 2.456-1.15.325-2.148-.321-2.463-1.226l-.84-2.518-5.013 1.677.84 2.517c.391 1.203-.434 2.542-1.831 2.542-.88 0-1.601-.564-1.86-1.314l-.842-2.516-2.431.809c-1.135.328-2.145-.317-2.463-1.229-.329-1.018.211-2.127 1.231-2.456l2.432-.809-1.621-4.823-2.432.808c-1.355.384-2.558-.59-2.558-1.839 0-.817.509-1.582 1.327-1.846l2.433-.809-.842-2.515c-.33-1.02.211-2.129 1.232-2.458 1.02-.329 2.13.209 2.461 1.229l.842 2.515 5.011-1.677-.839-2.517c-.403-1.238.484-2.553 1.843-2.553.819 0 1.585.509 1.85 1.326l.841 2.517 2.431-.81c1.02-.33 2.131.211 2.461 1.229.332 1.018-.21 2.126-1.23 2.456l-2.433.809 1.622 4.823 2.433-.809c1.242-.401 2.557.484 2.557 1.838 0 .819-.51 1.583-1.328 1.847m-8.992-6.428l-5.01 1.675 1.619 4.828 5.011-1.674-1.62-4.829z"></path></svg>
              <p>Powered by Luis Acuña.<br/></p>
            </aside> 
            <nav>
              <h6 class="footer-title">Social</h6> 
              <div class="grid grid-flow-col gap-4">
                <a
                  href="https://github.com/xLuisAcunax"
                  aria-label="GitHub"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-white transition focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded"
                >
                  <!-- Ícono GitHub -->
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
                    <path d="M12 .5a12 12 0 0 0-3.8 23.4c.6.1.8-.2.8-.6v-2.1c-3.4.7-4.1-1.6-4.1-1.6-.5-1.3-1.1-1.7-1.1-1.7-.9-.6.1-.6.1-.6 1 .1 1.5 1 1.5 1 .9 1.6 2.4 1.1 3 .9.1-.7.3-1.1.6-1.4-2.7-.3-5.4-1.3-5.4-6 0-1.3.5-2.3 1.2-3.1-.1-.3-.5-1.6.1-3.3 0 0 1-.3 3.3 1.3a11.6 11.6 0 0 1 6.1 0c2.2-1.6 3.3-1.3 3.3-1.3.6 1.7.2 3 .1 3.3.8.8 1.2 1.8 1.2 3.1 0 4.6-2.7 5.6-5.4 5.9.4.4.7 1 .7 2.1v3.1c0 .4.2.8.8.6A12 12 0 0 0 12 .5z"/>
                  </svg>
                </a>
                <a
                  href="https://www.linkedin.com/in/ldacuna83/"
                  aria-label="LinkedIn"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-white transition focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded"
                >
                  <!-- Ícono LinkedIn -->
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-6 w-6 fill-current">
                    <path d="M4.98 3.5A2.5 2.5 0 1 0 5 8.5a2.5 2.5 0 0 0-.02-5zM3 9h4v12H3zM9 9h3.8v1.7h.1c.5-.9 1.8-1.8 3.7-1.8 4 0 4.7 2.6 4.7 6V21h-4v-5.3c0-1.3 0-3-1.8-3s-2.1 1.4-2.1 2.9V21H9z"/>
                  </svg>
                </a>
              </div>
            </nav>
          </footer>
	</body>
</html>
